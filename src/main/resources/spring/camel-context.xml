<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:camel="http://camel.apache.org/schema/spring"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.springframework.org/schema/beans https://www.springframework.org/schema/beans/spring-beans-3.0.xsd        http://camel.apache.org/schema/spring https://camel.apache.org/schema/spring/camel-spring.xsd">
    <bean
        class="org.apache.activemq.artemis.jms.client.ActiveMQJMSConnectionFactory" id="artemisConnectionFactory">
        <constructor-arg index="0" value="tcp://demo-broker-ss-0.demo-broker-hdls-svc.amq.svc.cluster.local:5672"/>
    </bean>
    <bean class="org.apache.camel.component.jms.JmsComponent" id="jms">
        <property name="connectionFactory" ref="artemisConnectionFactory"/>
    </bean>
</beans>
